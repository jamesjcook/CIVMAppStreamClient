<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:buttonStyle">@style/keybutton</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="keybutton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:width">50sp</item>
        <item name="android:minWidth">50sp</item>
        <item name="android:minHeight">50sp</item>
        <item name="android:maxWidth">50sp</item>
        <item name="android:maxHeight">50sp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
